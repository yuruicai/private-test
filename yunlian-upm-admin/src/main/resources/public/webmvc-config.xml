<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
       http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <aop:aspectj-autoproxy proxy-target-class="true"/>

    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/**"/>
            <bean class="com.sinochem.yunlian.upm.admin.interceptor.DefaultAclInterceptor"/>
        </mvc:interceptor>
        <mvc:interceptor>
            <mvc:mapping path="/api/**"/>
            <bean class="com.sinochem.yunlian.upm.admin.interceptor.ApiInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>

    <bean id="handleExceptionResolver" class="com.sinochem.yunlian.upm.admin.exception.resolver.WebExceptionResolver">
        <property name="handleApiDomain">
            <set>
                <value>/api</value>
            </set>
        </property>
        <property name="knownException">
            <map>
                <entry key="IllegalArgumentException" value="400"/>
                <entry key="DuplicateKeyException" value="400"/>
                <entry key="BindException" value="400"/>
            </map>
        </property>

        <property name="defaultErrorView" value="error-tmp/uncaughtException"/>
        <property name="exceptionMappings">
            <props>
                <prop key=".UnAuthorizedException">error/accessDenied</prop>
                <prop key=".NoURIFoundException">error/pageNotFound</prop>
                <prop key=".DataNotFoundException">error/dataNotFound</prop>
                <prop key=".FileNotFoundException">error/fileNotFound</prop>
                <prop key=".AccessDeniedException">error/accessDenied</prop>
                <prop key="java.lang.Exception">error-tmp/uncaughtException</prop>
                <prop key=".ConstraintViolationException">error/validateException</prop>
                <prop key=".NoRoleException">error/dataNotFound</prop>
            </props>
        </property>
    </bean>

</beans>
