<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
			http://www.springframework.org/schema/context
			http://www.springframework.org/schema/context/spring-context-4.1.xsd
			http://www.springframework.org/schema/mvc
			http://www.springframework.org/schema/mvc/spring-mvc.xsd
			http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd">

    <context:component-scan base-package="com.sinochem.yunlian.upm.filter"/>

    <!-- UPM接口调用服务 -->
    <bean id="upmAuthService" class="com.sinochem.yunlian.upm.tools.UpmAuthService">
        <property name="clientId" value="${clientId}"/>
        <property name="secret" value="${secret}"/>
    </bean>

    <!-- UpmFilter -->
    <bean id="yunlianUpmFilter" class="com.sinochem.yunlian.upm.filter.spring.FilterFactoryBean">
        <property name="unauthorizedUrl" value="/unauthorized"/>
        <property name="loginUrl" value="${sso.host}"/> <!--单点登录系统host -->
        <property name="authUrl" value="${upm.host}" /> <!--权限管理系统host -->
        <property name="filterChainDefinitions">
            <value>
                /static/** = anon
                /favicon.ico = anon
                /generatImage = anon
                /unauthorized = anon
                /api/** = anon
                /logout = logout
                /**/*.ajax = user
                /** = userMenu
            </value>
        </property>
    </bean>

</beans>
